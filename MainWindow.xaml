<Window x:Class="ClubManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="Club Management" 
         MinHeight="450"
        MinWidth="800"
        Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="Auto" MinWidth="395"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64.0017571059432"/>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="82*"/>
            <RowDefinition Height="125*"/>
        </Grid.RowDefinitions>

        <Image x:Name="image1" Grid.RowSpan="6" Source="/image1.jpg" Stretch="Fill" Visibility="Hidden" Margin="0,-1,0,-2" StretchDirection="Both" Grid.ColumnSpan="3"/>
        <Image x:Name="image2" Grid.RowSpan="6" Source="/image2.jpg" Stretch="Fill" Visibility="Visible" Margin="0,-1,0,-2" StretchDirection="Both" Grid.ColumnSpan="3"/>
        <Image x:Name="image3" Grid.RowSpan="6" Source="/image3.jpg" Stretch="Fill" Visibility="Hidden" Margin="0,-1,0,-2" StretchDirection="Both" Grid.ColumnSpan="3"/>

        <TextBlock x:Name="Title" Margin="6,10,10,22" TextWrapping="Wrap" Text="Welcome to Club Management" FontSize="24" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.Column="1" FontWeight="Bold" Foreground="#FFE6E1E1"/>
        <Image x:Name="ball" Margin="386,5,0,10" Source="/ball.png" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.Column="1" HorizontalAlignment="Left" Width="54" Grid.ColumnSpan="2"/>
        <Button x:Name="AddPlayer" Content="Add a new player" Grid.Row="1" BorderBrush="#FF095211" FontSize="16" Margin="34,16,34,16" Click="AddPlayer_Click">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy3" Content="Delete entire club" Margin="34,60,34,15" Grid.Row="4" BorderBrush="#FF095211" FontSize="16" Grid.Column="2">
            <Button.Background>
                <SolidColorBrush Color="#FFAB561A" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy4" Content="Players window" Grid.Row="2" BorderBrush="#FF095211" FontSize="16" Margin="10,9,10,22">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy6" Content="Trainings window" Grid.Row="3" BorderBrush="#FF095211" FontSize="16" Grid.Column="1" Margin="0,22,0,10" HorizontalAlignment="Center" Width="182">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>

        <Button x:Name="AddPlayer_Copy7" Content="Trainers window" Grid.Row="2" BorderBrush="#FF095211" FontSize="16" Grid.Column="2" Margin="0,21,0,10" HorizontalAlignment="Center" Width="182">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <ComboBox Grid.Row="4" Margin="34,60,34,12" FontSize="18" Opacity="0.8" SelectionChanged="ComboBox_SelectionChanged" BorderBrush="#FFCE1717">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FF16A21E" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <ListBoxItem Content="Edit players"/>
            <ListBoxItem Content="Edit trainers"/>
            <ListBoxItem Content="Edit trainings"/>
        </ComboBox>
        <ComboBox x:Name="WallpaperBox" Grid.Column="1" HorizontalAlignment="Left" Margin="178,10,0,0" Grid.Row="4" VerticalAlignment="Top" Width="136" Height="32" FontSize="16" SelectionChanged="WallpaperBox_SelectionChanged">
            <ListBoxItem Content="Wallpaper 1"/>
            <ListBoxItem Content="Wallpaper 2"/>
            <ListBoxItem Content="Wallpaper 3"/>
        </ComboBox>
        <Button x:Name="AddPlayer_Copy9" Content="Save data to file" Margin="22,60,218,12" Grid.Row="4" BorderBrush="#FF095211" FontSize="16" Grid.Column="1">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy10" Content="Open data from file" Margin="218,60,22,12" Grid.Row="4" BorderBrush="#FF095211" FontSize="16" Grid.Column="1">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="WallPaperInfo" Grid.Column="1" HorizontalAlignment="Left" Margin="86,15,0,0" Grid.Row="4" TextWrapping="Wrap" Text="Wallpaper" VerticalAlignment="Top" FontSize="16" Height="23" Width="88" FontWeight="Bold"/>
        <MediaElement x:Name="mediaElement" Source="C:\Users\Admin\Desktop\ClubManagement\Footballmanagement.mp4" LoadedBehavior="Play" Stretch="Fill" MediaEnded="mediaElement_MediaEnded" MediaOpened="mediaElement_MediaOpened" Visibility="Hidden" Grid.RowSpan="5" Grid.ColumnSpan="3" />
        <Button x:Name="AddPlayer_Copy" Content="Club window" Grid.Row="1" BorderBrush="#FF095211" FontSize="16" Grid.Column="1" Margin="104,16,108,16">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>


    </Grid>
</Window>