<Window x:Class="ClubManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="46*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="5,10,0,0" TextWrapping="Wrap" Text="Welcome to Club Management" VerticalAlignment="Top" FontSize="24" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.Column="1"/>
        <Image x:Name="ball" Height="42" Margin="250,5,98,0" VerticalAlignment="Top" Source="/ball.png" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Button x:Name="AddPlayer" Content="Add a new player" HorizontalAlignment="Center" Margin="0,35,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="134" FontSize="16">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy" Content="Add a new trainer" HorizontalAlignment="Center" Margin="0,113,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="134" FontSize="16">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy1" Content="Delete player" HorizontalAlignment="Center" Margin="0,35,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="134" FontSize="16" Grid.Column="2">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy2" Content="Delete trainer" HorizontalAlignment="Center" Margin="0,113,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="134" FontSize="16" Grid.Column="2">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy3" Content="Delete entire club" HorizontalAlignment="Center" Margin="0,60,0,0" Grid.Row="2" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="134" FontSize="16" Grid.Column="2">
            <Button.Background>
                <SolidColorBrush Color="#FFAB561A" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy4" Content="Browse your team players" HorizontalAlignment="Center" Margin="0,35,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="214" FontSize="16" Grid.Column="1">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy5" Content="Add a training" HorizontalAlignment="Center" Margin="0,183,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="134" FontSize="16">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy6" Content="Browse training schedule" HorizontalAlignment="Center" Margin="0,183,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="214" FontSize="16" Grid.Column="1">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy7" Content="Browse team trainers" HorizontalAlignment="Center" Margin="0,113,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="214" FontSize="16" Grid.Column="1">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy8" Content="Delete training" HorizontalAlignment="Center" Margin="0,183,0,0" Grid.Row="1" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="134" FontSize="16" Grid.Column="2">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <ComboBox HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Width="134" Height="40" Margin="0,45,0,0" FontSize="18" Opacity="0.8" BorderBrush="#FFCE1717">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FF16A21E" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <ComboBox Grid.Column="1" HorizontalAlignment="Center" Margin="0,18,0,0" Grid.Row="2" VerticalAlignment="Top" Width="136" Height="32"/>
        <Button x:Name="AddPlayer_Copy9" Content="Save data to file" HorizontalAlignment="Left" Margin="40,60,0,0" Grid.Row="2" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="144" FontSize="16" Grid.Column="1">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <Button x:Name="AddPlayer_Copy10" Content="Open data from file" HorizontalAlignment="Left" Margin="210,60,0,0" Grid.Row="2" VerticalAlignment="Top" BorderBrush="#FF095211" Height="50" Width="155" FontSize="16" Grid.Column="1">
            <Button.Background>
                <SolidColorBrush Color="#FF1AAB29" Opacity="0.8"/>
            </Button.Background>
        </Button>
        <MediaElement x:Name="mediaElement" Source="/Footballmanagement.mp4" LoadedBehavior="Play" Stretch="Fill" MediaEnded="mediaElement_MediaEnded" MediaOpened="mediaElement_MediaOpened" Visibility="Hidden" Grid.RowSpan="3" Grid.ColumnSpan="3" />

    </Grid>
</Window>